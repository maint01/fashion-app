<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity OrderProduct.
    -->
    <changeSet id="20180421073554-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="order_product"
                                 constraintName="fk_order_product_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="orders_id"
                                 baseTableName="order_product"
                                 constraintName="fk_order_product_orders_id"
                                 referencedColumnNames="id"
                                 referencedTableName="orders"/>

    </changeSet>
</databaseChangeLog>
